{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo.fast"
  },
  "include": [
    "app.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests/**/*.ts",
    "src/migrations/**/*.ts"
  ]
}
